    "algorithm": {
      "label": "Algorithm",
      "description": "Choose an algorithm for image processing.",
      "default_value": "JarvisJudiceNinke",
      "type": "enum",
      "options": {
        "Floyd-Steinburg": "FloydSteinburg",
        "Jarvis-Judice-Ninke": "JarvisJudiceNinke",
        "Stucki": "Stucki",
        "Atkinson": "Atkinson",
        "Burkes": "Burkes",
        "Sierra-2": "Sierra2",
        "Sierra-3": "Sierra3",
        "Sierra Lite": "SierraLite"
      }
